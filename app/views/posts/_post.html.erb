<br>
  <div class="post-skeleton">
    <div class=<%= user_signed_in? ? "votes" : "votes-not-signed-in" %>>

        <%= link_to like_post_path(post), method: :put do %>
          <%=image_tag("up.png") %>
          <p id="vote-number"><%= post.get_upvotes.size - post.get_downvotes.size%></p>
          <%if !user_signed_in? %>
          <span class="tooltiptext">Sign up/login to vote!!</span>
          <%end %>
        <% end %>
        <%= link_to dislike_post_path(post), method: :put do %>
          <%=image_tag("down.png") %>
        <% end %>
    </div>


  <div class="post-card">
    <div id="posted-by"><small>Posted by </small>
      <% if post.user%>
        <small><%= post.user.email %></small>
      <% else %>
        <small>anonymous</small>
      <% end %>
      <small><%= time_ago_in_words(post.created_at) %> ago</small>
    </div>
    <div id="post-title"><%= link_to post do %><%= post.title %><% end %></div>
    <div><%= link_to post do %><img src="<%= post.img %>" width="100%" height="100%"/><% end %></div>
  </div>
  </div>