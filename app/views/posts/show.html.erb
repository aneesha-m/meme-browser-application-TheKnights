<div class="content-posts">
  <div class="post-skeleton">
    <div class="votes">
      <%= link_to like_post_path(@post), method: :put do %>
        <%=image_tag("up.png") %>
        <p id="vote-number"><%= @post.get_upvotes.size - @post.get_downvotes.size%></p>
      <% end %>
      <%= link_to dislike_post_path(@post), method: :put do %>
        <%=image_tag("down.png") %>
      <% end %>
    </div>


    <div class="post-card">
      <div id="cancel"><%=link_to image_tag("cancel.png"), root_path %></div>
      <div id="posted-by"><small>Posted by </small>
        <% if @post.user%>
          <small><%= @post.user.email %></small>
        <% else %>
          <small>anonymous</small>
        <% end %>
        <small><%= time_ago_in_words(@post.created_at) %> ago</small>
      </div>
      <div id="post-title"><%= link_to @post do %><%= @post.title %><% end %></div>
      <div><%= link_to @post do %><img src="<%= @post.img %>" width="100%" height="100%"/><% end %></div>
      <%if !@post.taggings.empty?%>
        <div id="tags"><small>Tags: <%= raw tag_links(@post.all_tags) %></small></div>
      <%end %>
    </div>
  </div>

  <div class="welcome">
    <% if user_ownes_post?(@post) and user_signed_in? %>
      <%= link_to 'Edit', edit_post_path(@post) %>
      <%= link_to "Delete", post_path(@post),
                  :data => {:confirm => "Is this what you want?",
                            :method => "delete"}
      %>
      <br>
    <% end %>
  </div>


<%= form_for [@post, Comment.new] do |f| %>
<%= f.text_area :body, :id=> "bodyComment", placeholder: "Add a comment..." %><br/>
<%= f.submit :id=> "submitIt"%>
<% end %>

  <div class="comment-section">
    <ul style="list-style-type:none">
      <%= render(partial: 'comments/comment', collection: @post.comments) %>
    </ul>
  </div>

</div>